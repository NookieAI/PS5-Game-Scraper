{
  "name": "ps5-game-scraper",
  "version": "2.0.0",
  "description": "PS5 Game Scraper",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis",
    "build:linux": "electron-builder --linux AppImage",
    "build:all": "electron-builder --win portable --linux AppImage"
  },
  "author": "Nookie",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "electron-store": "^8.1.0",
    "fuse.js": "^7.0.0"
  },
  "build": {
    "appId": "com.nookie.ps5-game-scraper",
    "productName": "PS5 Game Scraper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "PS5-Game-Scraper-${version}-Portable.exe"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons",
      "category": "Utility",
      "artifactName": "PS5-Game-Scraper-${version}.AppImage"
    }
  }
}